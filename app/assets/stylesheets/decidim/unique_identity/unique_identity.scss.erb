  }

  label {
    cursor: pointer;
    border: 1px solid var(--primary);
    padding: 1em 1em;
    margin: 1rem 0 1rem 0;
    text-align: center;
    display: block;
    right: .2em;
    vertical-align: middle;
    border-radius: 4px;
